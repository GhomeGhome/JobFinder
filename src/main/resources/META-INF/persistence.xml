<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="jobfinderPU" transaction-type="JTA">
        <!-- This datasource must exist in Payara -->
        <jta-data-source>jdbc/JobFinder</jta-data-source>

        <!-- All your entities -->
        <class>ch.unil.doplab.Company</class>
        <class>ch.unil.doplab.JobOffer</class>
        <class>ch.unil.doplab.Employer</class>
        <class>ch.unil.doplab.Applicant</class>
        <class>ch.unil.doplab.Application</class>
        <class>ch.unil.doplab.Interview</class>

        <properties>
            <!-- For dev: drop & recreate schema on each deployment -->
            <property name="jakarta.persistence.schema-generation.database.action"
                      value="create"/>
            <property name="eclipselink.logging.level" value="FINEST"/>
        </properties>
    </persistence-unit>

</persistence>
